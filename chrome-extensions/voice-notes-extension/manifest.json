{
  "manifest_version": 3,
  "name": "Voice Notes",
  "version": "1.0",
  "description": "Create and store voice-directed notes as text.",
  "permissions": ["storage", "audioCapture"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
